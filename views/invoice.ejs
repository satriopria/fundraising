<div class="container">
    <h2>Invoice Donasi</h2>
    <p>Jumlah Donasi: Rp <span id="donationAmount"></span> <button class="btn btn-outline-primary" onclick="copyText('donationAmount')">Salin</button></p>
    <p>Rekening Tujuan: <span id="accountNumber"></span> <button class="btn btn-outline-primary" onclick="copyText('accountNumber')">Salin</button></p>
    <p>Harap klik tombol konfirmasi setelah Anda menyelesaikan donasi.</p>
    <button id="confirmDonation" class="btn btn-success">Konfirmasi Donasi</button>
</div>
<script>
  function copyText(elementId) {
    const element = document.getElementById(elementId);
    navigator.clipboard.writeText(element.innerText);
    alert('Teks berhasil disalin!');
  }
</script>
  
  <script>
  document.addEventListener('DOMContentLoaded', async () => {
    const invoiceId = window.location.pathname.split('/').pop(); // Ambil ID dari URL
  
    // Ambil detail donasi dari server
    const response = await axios.get(`/api/donations/${invoiceId}`);
    const donation = response.data;
  
    document.getElementById('donationAmount').innerText = donation.amount || "Rp 100.000";
  
    document.getElementById('confirmDonation').addEventListener('click', async () => {
      await axios.post(`/api/donations/${invoiceId}/confirm`);
      alert('Donasi berhasil dikonfirmasi!');
      window.location.href = '/thank-you'; // Redirect ke halaman terima kasih
    });
  });
  </script>