      <div class="sidebar-heading">
        D O N A S I
      </div>

      <!-- Nav Item - Charts -->
      <li class="nav-item <%= currentPath === '/admin/projects' ? 'active' : '' %>">
        <a class="nav-link" href="/dashboard/admin/projects">
          <i class="fas fa-fw fa-briefcase"></i>
