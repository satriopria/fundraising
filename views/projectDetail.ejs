<div class="container py-5">
  <div class="row">
    <!-- Thumbnail -->
    <div class="col-md-6">
      <img src="<%= projectDetail.thumbnail || '/img/default_image.png' %>" class="img-fluid rounded" alt="<%= projectDetail.name %>">
    </div>
    <!-- Donation Modal -->
    <div class="modal fade" id="donationModal" tabindex="-1" aria-labelledby="donationModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="donationModalLabel">Donasi untuk <%= projectDetail.name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="donationForm">
              <!-- Preset Amounts -->
              <div class="mb-3">
                <label class="form-label">Pilih Nominal Donasi</label>
                <div class="d-flex flex-wrap gap-2">
                  <button type="button" class="btn btn-outline-primary donation-preset" data-amount="10000">Rp 10.000</button>
                  <button type="button" class="btn btn-outline-primary donation-preset" data-amount="50000">Rp 50.000</button>
                  <button type="button" class="btn btn-outline-primary donation-preset" data-amount="100000">Rp 100.000</button>
                  <button type="button" class="btn btn-outline-primary donation-preset" data-amount="500000">Rp 500.000</button>
                </div>
              </div>

              <!-- Custom Amount -->
              <div class="mb-3">
                <label for="customAmount" class="form-label">Atau Masukkan Nominal Lain</label>
                <div class="input-group">
                  <span class="input-group-text">Rp</span>
                  <input type="number" class="form-control" id="customAmount" name="amount" placeholder="0" min="1000">
                </div>
              </div>

              <!-- Payment Methods -->
              <div class="mb-3">
                <label class="form-label">Metode Pembayaran</label>
                <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                  <option value="">Pilih metode pembayaran...</option>
                  <% paymentMethod.forEach(method => { %>
                    <option value="<%= method.id %>"> <%= method.account_number %> <%= method.provider %> - a/n <%= method.account_name %></option>
                  <% }); %>
                </select>
              </div>

              <button type="submit" class="btn btn-primary w-100">Lanjutkan Donasi</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Project Details -->
    <div class="col-md-6">
      <h1>
        <%= projectDetail.name %>
      </h1>
      <p>
        <%= projectDetail.description %>
      </p>
      <h4 class="text-primary">Target Donasi: Rp <%= projectDetail.budget.toLocaleString('id-ID') %>
      </h4>
      <h5 class="text-success">Terkumpul: Rp <%= collectedDonation.toLocaleString('id-ID') || '0' %>
      </h5>

      <!-- Donation Button -->
      <a href="/donate/<%= projectDetail.id %>" class="btn btn-primary btn-lg mt-3">Donasi Sekarang</a>
    </div>
  </div>
</div>


<script>
  // Update donation button to trigger modal
  document.querySelector('a[href^="/donate/"]').addEventListener('click', function(e) {
    e.preventDefault();
    new bootstrap.Modal(document.getElementById('donationModal')).show();
  });

  // Handle preset donation amounts
  document.querySelectorAll('.donation-preset').forEach(button => {
    button.addEventListener('click', function() {
      document.getElementById('customAmount').value = this.dataset.amount;
    });
  });

  // Handle donation form submission
  document.getElementById('donationForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const amount = document.getElementById('customAmount').value;
    const paymentMethod = document.getElementById('paymentMethod').value;
    
    if (!amount || amount < 1000) {
      alert('Minimal donasi Rp 1.000');
      return;
    }

    try {
      const response = await fetch('/api/finance/create', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          project_id: '<%= projectDetail.id %>',
          amount: parseInt(amount),
          payment_method_id: paymentMethod,
          type: 'donation',
          status: 'pending'
        })
      });

      if (response.ok) {
        const result = await response.json();
        // Redirect to payment page or show success message
        window.location.href = `/payment/${result.id}`;
      } else {
        throw new Error('Failed to process donation');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat memproses donasi');
    }
  });
</script>